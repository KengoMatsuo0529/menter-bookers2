<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5">
    <h1>User info</h1>

    <%= form_with model:@user, local:true do |f| %>
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name, placeholder:"名前", class: "form-control" %>
    <%= f.label :profile_image, '' %>
    <%= attachment_image_tag @user, :profile_image, fallback: "no-img.png",size:"100x100", class:"attachment user profile_image fallback" %>
    <%= f.attachment_field :profile_image %>
    <%= f.label :introduction, 'Introduction' %>
    <%= f.text_field :introduction, autofocus: true, id:"inputName", placeholder:"自己紹介", class: "form-control" %>
    <%= f.submit "Update User", class: "btn btn-success" %>
    <% end %>
  </div>
</div>