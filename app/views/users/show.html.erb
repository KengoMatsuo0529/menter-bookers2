<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<p id="notice"><%=  notice %></p>

<div class="row">

  <%= render 'books/list', user: @user, book: @book %>

  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
          <td><%= link_to user_path(book.user) do %>
            <%= attachment_image_tag @user, :profile_image, fallback: "no-img.png", size:"40x40", class:"attachment user profile_image fallback" %>
            <% end %>
            </td>
          <td><%= link_to book_path(book.id) do %>
            <p><%= book.title %></p></td>
            <% end %>
          <td><p><%= book.body %></p></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>